{
  "version": "2.1.1",
  "compilerOptions": {
      "lib": ["es5", "es6", "esnext.asynciterable"],
      "outDir": "build/",
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "declaration": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "stripInternal": true,
      "pretty": true,
      "strictNullChecks": true,
      "noUnusedLocals": true
  },
  "include": [
    "."
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}